<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragmentos.creacionNotificacion"
    android:paddingTop="15dp"
    >

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView45"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecciona la ruta:"
        android:paddingLeft="15dp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_gravity="center_horizontal"
        >

        <ToggleButton
            android:id="@+id/ToggleButton01"
            style="@style/toggleMiStyle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_toggle_bgq"
            android:checked="true"

            />

        <ToggleButton
            android:id="@+id/ToggleButton02"
            style="@style/toggleMiStyle"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@id/ToggleButton01"
            android:background="@drawable/btn_toggle_bgb"
            android:checked="true"

            />

        <ToggleButton
            android:id="@+id/ToggleButton03"
            style="@style/toggleMiStyle"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/btn_toggle_bgt"
            android:checked="true"
            android:layout_toRightOf="@id/ToggleButton02"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >

        <TextView
            android:id="@+id/textView49"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Selecciona la parada:"
            android:gravity="center_vertical"
            />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Selecciona el horario:" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView44"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Días para repetir la notificación:" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        >

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/style_toggle_button"
            android:text="ToggleButton"
            android:textOff="L"
            android:textOn="L"
            android:layout_marginRight="15dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
            />

        <ToggleButton
            android:id="@+id/toggleButton2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/style_toggle_button"
            android:text="ToggleButton"
            android:textOff="M"
            android:textOn="M"
            android:layout_marginRight="15dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
            />

        <ToggleButton
            android:id="@+id/toggleButton3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/style_toggle_button"
            android:text="ToggleButton"
            android:textOff="M"
            android:textOn="M"
            android:layout_marginRight="15dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
            />

        <ToggleButton
            android:id="@+id/toggleButton4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/style_toggle_button"
            android:text="ToggleButton"
            android:textOff="J"
            android:textOn="J"
            android:layout_marginRight="15dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
            />

        <ToggleButton
            android:id="@+id/toggleButton5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/style_toggle_button"
            android:text="ToggleButton"
            android:textOff="V"
            android:textOn="V"
            android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/textView47"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear notificacion:"
        android:paddingLeft="15dp"
        />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        >

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5 minutos antes" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="10 minutos antes" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="15 minutos antes" />
    </RadioGroup>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Guardar la notificación" />

</LinearLayout>