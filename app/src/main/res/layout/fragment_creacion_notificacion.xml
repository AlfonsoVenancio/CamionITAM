<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmentos.creacionNotificacion">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        >

        <ToggleButton
            android:id="@+id/ToggleButton01"
            style="@style/toggleMiStyle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_toggle_bgq"
            android:checked="true" />

        <ToggleButton
            android:id="@+id/ToggleButton02"
            style="@style/toggleMiStyle"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@id/ToggleButton01"
            android:background="@drawable/btn_toggle_bgb"
            android:checked="true" />

        <ToggleButton
            android:id="@+id/ToggleButton03"
            style="@style/toggleMiStyle"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@id/ToggleButton02"
            android:background="@drawable/btn_toggle_bgt"
            android:checked="true" />
    </RelativeLayout>

</RelativeLayout>